<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.example.liza.superdiary.ui.main.MainActivity">


    <ImageView
        android:id="@+id/imageViewDelete"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/delete"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textViewPreview"
        style="@style/TextPrimary"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:text="Сходить к врачу"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textViewTime"
        app:layout_constraintRight_toLeftOf="@+id/imageViewDelete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.558" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="84dp"
        android:layout_height="@dimen/item_height"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:maxLines="2"
        android:text="22 июля 18:00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>